{
  "name": "server",
  "version": "1.0.0",
  "description": "NodeJS ExpressJS API boilerpalte in Typescript",
  "main": "src/app.ts",
  "scripts": {
    "build": "npm-run-all clean tsc copy-assets",
    "clean": "rimraf build/*",
    "copy-assets": "ts-node src/tools/copyAssets",
    "start": "nodemon",
    "inspect": "nodemon --inspect src/app.ts",
    "tsc": "tsc",
    "lint": "npm run lint:js ",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .ts",
    "lint:js": "npm run lint:eslint src/",
    "lint:fix": "npm run lint:js -- --fix",
    "prettier": "prettier --config ./.prettierrc.js --write \"src/**/*{.ts,.json}\"",
    "prettier:verify": "prettier --config ./.prettierrc.js --check \"src/**/*{.ts,.json}\"",
    "prettier:staged": "pretty-quick --staged",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:arghyac35/api_boilerplate.git"
  },
  "keywords": [
    "js",
    "javascript",
    "typescript",
    "node",
    "express"
  ],
  "author": "Arghya Chanda",
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.29.1",
    "celebrate": "^15.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "ejs": "^3.1.8",
    "email-templates": "^10.0.1",
    "errorhandler": "^1.5.1",
    "event-dispatch": "^0.4.1",
    "eventemitter3": "^4.0.7",
    "express": "^4.18.1",
    "express-jwt": "^7.7.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "mongoose": "^6.6.1",
    "nodemailer": "^6.7.8",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "i18next": "^21.9.2",
    "i18next-fs-backend": "^1.1.5",
    "i18next-http-middleware": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/lodash": "^4.14.185",
    "@types/node": "^18.7.18",
    "@types/nodemailer": "^6.4.6",
    "@types/nodemailer-direct-transport": "^1.0.32",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.2",
    "typescript": "^4.8.3"
  },
  "bugs": {
    "url": "https://github.com/arghyac35/api_boilerplate/issues"
  },
  "homepage": "https://github.com/arghyac35/api_boilerplate#readme",
  "engines": {
    "node": "16.x"
  }
}
